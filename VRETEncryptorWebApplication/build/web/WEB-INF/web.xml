<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>InitializeServelet</servlet-name>
        <servlet-class>za.ac.tut.controller.InitializeServelet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>za.ac.tut.controller.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EncryptMessageServelet</servlet-name>
        <servlet-class>za.ac.tut.controller.EncryptMessageServelet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewAllMessagesServlet</servlet-name>
        <servlet-class>za.ac.tut.controller.ViewAllMessagesServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewLongestMessage</servlet-name>
        <servlet-class>za.ac.tut.controller.ViewLongestMessage</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>InitializeServelet</servlet-name>
        <url-pattern>/InitializeServelet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/LogoutServlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EncryptMessageServelet</servlet-name>
        <url-pattern>/EncryptMessageServelet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewAllMessagesServlet</servlet-name>
        <url-pattern>/ViewAllMessagesServlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewLongestMessage</servlet-name>
        <url-pattern>/ViewLongestMessage.do</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <error-page>
        <error-code>404</error-code>
        <location>/not_found.jsp</location>
    </error-page>
    <error-page>
        <error-code>403</error-code>
        <location>/access_denied.jsp</location>
    </error-page>
    <context-param>
        <param-name>compname</param-name>
        <param-value>Siri</param-value>
    </context-param>
    <security-constraint>
        <display-name>AgentConstraint</display-name>
        <web-resource-collection>
            <web-resource-name>AgentResources</web-resource-name>
            <description>Resources allocated to a Field Agent</description>
            <url-pattern>/encrypt_message.html</url-pattern>
            <url-pattern>/EncryptMessageServelet.do</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>agent</role-name>
        </auth-constraint>
    </security-constraint>
    <security-constraint>
        <display-name>ManagerConstraint</display-name>
        <web-resource-collection>
            <web-resource-name>ManagerResources</web-resource-name>
            <description>Resources allocated to the manager</description>
            <url-pattern>/ViewAllMessagesServlet.do</url-pattern>
            <url-pattern>/ViewLongestMessage.do</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>manager</role-name>
        </auth-constraint>
    </security-constraint>
    <login-config>
        <auth-method>FORM</auth-method>
        <realm-name>file</realm-name>
        <form-login-config>
            <form-login-page>/Login.jsp</form-login-page>
            <form-error-page>/login_error.jsp</form-error-page>
        </form-login-config>
    </login-config>
    <security-role>
        <description/>
        <role-name>agent</role-name>
    </security-role>
    <security-role>
        <description/>
        <role-name>manager</role-name>
    </security-role>
</web-app>
